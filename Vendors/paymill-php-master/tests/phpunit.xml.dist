<phpunit bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="integration">
            <directory>./Integration</directory>
        </testsuite>
        <testsuite name="unit">
            <directory>./Unit</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
</phpunit>
